{
    "name": "Alert Me Please",
    "description": "This can be used to alert when a number reaches a certain level",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_idle",
            "js": ["content.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting"]
}